generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

model user {
  id        String     @id
  email     String     @unique
  name      String
  createdAt DateTime   @default(now()) @db.Timestamptz(6)
  updatedAt DateTime   @default(now()) @db.Timestamptz(6)
  user_vpa  user_vpa[]
}

model user_vpa {
  id        String   @id
  vpa       String   @unique
  userId    String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, vpa])
}

model hospital {
  id        String   @id
  name      String
  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @default(now()) @db.Timestamptz(6)
}
